	<ItemGroup Condition="'$(TargetFramework)' == 'net6.0'">
		<SupportedPlatform Include="browser" />
	</ItemGroup>

	<ItemGroup>
		<None Remove="Forge.Net.WebSockets.xml" />
	</ItemGroup>

	<Target Name="PostBuild" AfterTargets="PostBuildEvent">
